# Documentation Service - Backend Environment Variables
# Copy this file to .env and adjust values for your environment

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
POSTGRES_USER=docservice
POSTGRES_PASSWORD=docservice_dev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=docservice

# =============================================================================
# SECURITY
# =============================================================================
# IMPORTANT: Change this in production!
SECRET_KEY=dev_secret_key_change_in_production

# JWT Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# SEARCH (Meilisearch)
# =============================================================================
MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_API_KEY=docservice_dev_key

# =============================================================================
# CACHE (Redis)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# GIT STORAGE
# =============================================================================
# Path where Git repositories will be stored
GIT_REPOS_PATH=/tmp/docservice/repos

# =============================================================================
# CORS
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# AI SERVICES (Optional)
# =============================================================================
# OpenAI
# OPENAI_API_KEY=sk-...

# Anthropic
# ANTHROPIC_API_KEY=sk-ant-...
